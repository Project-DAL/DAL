<mapper namespace="kr.co.Dal.my.mapper.MyBoardMapper">

    <!-- 게시글 목록 -->
    <select id="selectBoardList" resultType="kr.co.Dal.my.model.MyBoardVO">
        SELECT
            bard_id,
            user_id,
            bard_type,
            bard_tit,
            bard_cnt,
            bard_rdate,
            bard_stts
        FROM
            bard_tb
        WHERE
            bard_stts = 1
    </select>

    <!-- 게시글 삭제 -->
    <update id="deleteBoardList" parameterType="kr.co.Dal.my.model.MyBoardVO">
        UPDATE
            bard_tb
        SET
            bard_stts = 0
    </update>





</mapper>