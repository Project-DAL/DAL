<mapper namespace="kr.co.Dal.my.mapper.MyBoardMapper">

    <!-- 내 게시글 목록 -->
    <select id="selectBoardList" parameterType="kr.co.Dal.util.SearchCondition" resultType="kr.co.Dal.my.model.MyBoardVO">
        SELECT
            bard_id,
            user_id,
            bard_type,
            bard_tit,
            bard_cnt,
            bard_rdate,
            bard_stts
        FROM
            bard_tb
        WHERE
            bard_stts = 1
          AND
            user_id = #{userId}
        ORDER BY
            bard_rdate DESC
            LIMIT #{offset}, 10
    </select>



    <!-- 내 게시글 목록 개수 -->
    <select id="countBoard" parameterType="kr.co.Dal.util.SearchCondition" resultType="int">
        SELECT COUNT(*)
        FROM bard_tb
        WHERE
            bard_stts = 1
          AND
            user_id = #{userId}
    </select>


    <!-- 내 게시글 삭제 -->
    <update id="deleteBoard" parameterType="kr.co.Dal.my.model.MyBoardVO">
        UPDATE
            bard_tb
        SET
            bard_stts = 0
        WHERE
            bard_id = #{bardId}
          AND
            bard_type = #{bardType}
    </update>


</mapper>